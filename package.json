{
  "name": "@voiceflow/runtime",
  "description": "Runtime for executing voiceflow projects",
  "version": "0.1.0",
  "author": "Voiceflow",
  "bugs": {
    "url": "https://github.com/voiceflow/runtime/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@types/safe-json-stringify": "^1.1.0",
    "@voiceflow/api-sdk": "1.21.0",
    "@voiceflow/common": "^6.3.0",
    "@voiceflow/general-types": "1.16.3",
    "axios": "^0.19.0",
    "bluebird": "^3.7.2",
    "immer": "^5.1.0",
    "lodash": "^4.17.19",
    "mathjs": "^6.5.0",
    "safe-json-stringify": "^1.2.0",
    "workerpool": "^5.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/bluebird": "^3.5.29",
    "@types/chai": "^4.2.11",
    "@types/chai-as-promised": "^7.1.2",
    "@types/express": "^4.17.2",
    "@types/lodash": "^4.14.149",
    "@types/mathjs": "^6.0.4",
    "@types/mocha": "^5.2.7",
    "@types/sinon": "^7.5.2",
    "@types/workerpool": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "@voiceflow/commitlint-config": "^1.0.1",
    "@voiceflow/eslint-config": "^2.0.5",
    "@voiceflow/git-branch-check": "^1.1.3",
    "@voiceflow/prettier-config": "^1.0.5",
    "@zerollup/ts-transform-paths": "^1.7.9",
    "babel-eslint": "^10.0.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "codacy-coverage": "^3.4.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "fixpack": "^2.3.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^6.2.2",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "prettier-eslint-cli": "^5.0.0",
    "rimraf": "^3.0.0",
    "semantic-release": "^15.13.31",
    "sinon": "^7.5.0",
    "source-map-support": "^0.5.16",
    "supertest": "^4.0.2",
    "ts-mocha": "^6.0.0",
    "ts-node": "^8.5.4",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.8",
    "typedoc": "^0.20.12",
    "typedoc-plugin-sourcefile-url": "^1.0.6",
    "typescript": "^3.9"
  },
  "homepage": "https://github.com/voiceflow/runtime#readme",
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "git-branch-check"
    }
  },
  "license": "ISC",
  "lint-staged": {
    "package.json": [
      "fixpack",
      "git add"
    ],
    "**/*.{js,jsx}": [
      "eslint --fix",
      "prettier-eslint --write",
      "git add"
    ]
  },
  "main": "build/index.js",
  "prettier": "@voiceflow/prettier-config",
  "release": {
    "branch": "master"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/voiceflow/runtime.git"
  },
  "scripts": {
    "build": "npm run clean && ttsc --project ./tsconfig.build.json",
    "clean": "rimraf build",
    "deploy:staging": "git push origin $(git branch | grep \\* | cut -d ' ' -f2):staging -f",
    "docs:gen": "typedoc ./lib",
    "gen-certs": "scripts/generate_certs.sh",
    "lint": "eslint \"lib/**/*.{js,ts}\"",
    "lint:fix": "yarn lint --fix",
    "lint:quiet": "yarn lint --quiet",
    "lint:report": "yarn lint --format json -o sonar/report.json",
    "local": "NODE_ENV=local ts-node -r tsconfig-paths/register start.ts",
    "local:watch": "NODE_ENV=local forever --watch -c \"ts-node -r tsconfig-paths/register\" start.ts",
    "prepare": "npm run build",
    "start": "NODE_ENV=production node --max-old-space-size=8192 build/start.js",
    "test": "NODE_ENV=test nyc ts-mocha --paths --opts ./config/tests/mocha.opts 'tests/**/*.{unit,it}.ts'",
    "test:integration": "NODE_ENV=test nyc ts-mocha --paths --opts ./config/tests/mocha.opts 'tests/**/*.it.ts'",
    "test:single": "NODE_ENV=test ts-mocha --paths --opts ./config/tests/mocha.opts",
    "test:unit": "NODE_ENV=test nyc ts-mocha --paths --opts ./config/tests/mocha.opts 'tests/**/*.unit.ts'"
  },
  "types": "build/index.d.ts"
}
